<%= form_with(model: food, class: "contents") do |form| %>
  <% if food.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :category %>
    <%= form.select :category, food_category_options, { include_blank: true }, { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" } %>
  </div>

  <%= turbo_frame_tag('food-category-form') do %>
    <div class="my-5">
      <%= form.label :subcategory %>
      <%= form.select :subcategory, food_subcategory_options(food), { include_blank: true }, { class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" } %>
    </div>

    <% if food.subcategory_other? %>
      <div class="my-5">
        <%= form.label :subcategory_other_title %>
        <%= form.text_field :subcategory_other_title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
    <% end %>

    <% if food.requires_cooking_method? %>
      <div class="my-5">
        <%= form.label :cooking_method %>
        <div class="mt-2 flex gap-x-4">
          <%=
            form.collection_radio_buttons :cooking_method, food_cooking_method_options, :last, :first do |b|
              b.label(class: 'block') {
                b.radio_button(class: 'shadow border border-gray-200 outline-none mr-1') +
                b.text
              }
            end
          %>
        </div>
      </div>
    <% end %>

    <% if food.checkable_sparkling? %>
      <div class="my-5">
        <%= form.label :sparkling %>
        <%= form.check_box :sparkling, class: "block shadow rounded-md border border-gray-200 outline-none mt-2 h-5 w-5" %>
      </div>
    <% end %>
  <% end %>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
